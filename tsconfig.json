{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "node",
      "vitest/globals",
    ],
    "rootDir": ".",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
}
